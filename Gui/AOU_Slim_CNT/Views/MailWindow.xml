<?xml version="1.0" ?><root>
  <View name="InboxTab" h_alignment="LEFT" view_layout="vertical">
    <View h_alignment="LEFT" view_layout="horizontal">
        <TextView layout_borders="Rect(5,5,5,0)" value="Messages"/>
        <HLayoutSpacer/>
        <TextView layout_borders="Rect(5,5,5,0)" value="Size: "/>
        <TextView layout_borders="Rect(5,5,5,0)" name="InboxSize" value="0/30"/>
    </View>
    <BorderView min_size="Point(300,-1)" layout_borders="Rect(5,5,5,5)" name="InboxBorder">
    </BorderView>
    <View view_layout="horizontal">
      <Button label="New" layout_borders="Rect(5,5,5,5)" name="NewButton"/>
      <Button label="Delete" layout_borders="Rect(5,5,5,5)" name="DeleteButton"/>
      <HLayoutSpacer/>
      <Button label="Close" layout_borders="Rect(5,5,5,5)" name="CloseButton"/>
    </View>
  </View>
</root>
